{
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "no-implicit-dependencies": [true, "dev"],
    "jsx-wrap-multiline": false,
    "no-any": true,
    "object-literal-sort-keys": false,
    "quotemark": [
      true,
      "single"
    ],
    "prettier.singleQuote":true,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "ignore",
          "arrays": "ignore",
          "functions": "ignore",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "comma-dangle": ["error", {"functions": "ignore"}],
    "named-imports-order": "any"
  }
}